{
  "name": "vscode-encrypted-zip",
  "displayName": "Encrypted ZIP Creator",
  "description": "ファイルやフォルダを選択して暗号化ZIPファイルを作成",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-encrypted-zip.createEncryptedZip",
    "onCommand:vscode-encrypted-zip.createFromActiveFile",
    "onCommand:vscode-encrypted-zip.createFromDragDrop"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Encrypted ZIP Creator",
      "properties": {
        "encryptedZip.passwordPatterns": {
          "type": "array",
          "default": [
            {
              "name": "標準 (大文字/小文字/数字/記号)",
              "uppercase": true,
              "lowercase": true,
              "numbers": true,
              "specialChars": true,
              "length": 16
            },
            {
              "name": "英数字のみ (大文字/小文字/数字)",
              "uppercase": true,
              "lowercase": true,
              "numbers": true,
              "specialChars": false,
              "length": 16
            },
            {
              "name": "数字のみ (6桁)",
              "uppercase": false,
              "lowercase": false,
              "numbers": true,
              "specialChars": false,
              "length": 6
            }
          ],
          "description": "パスワード生成のパターン設定です"
        },
        "encryptedZip.defaultPasswordPattern": {
          "type": "number",
          "default": 0,
          "description": "デフォルトで使用するパスワードパターンのインデックス"
        }
      }
    },
    "commands": [
      {
        "command": "vscode-encrypted-zip.createEncryptedZip",
        "title": "暗号化ZIPの作成"
      },
      {
        "command": "vscode-encrypted-zip.createFromActiveFile",
        "title": "現在のファイルを暗号化ZIP化"
      },
      {
        "command": "vscode-encrypted-zip.createFromDragDrop",
        "title": "ファイル選択して暗号化ZIP化"
      },
      {
        "command": "vscode-encrypted-zip.configurePasswordPatterns",
        "title": "パスワードパターンの設定"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vscode-encrypted-zip.createEncryptedZip",
          "group": "navigation",
          "when": "explorerResourceIsFolder || explorerResourceIsRoot || explorerResourceSelected"
        }
      ],
      "editor/context": [
        {
          "command": "vscode-encrypted-zip.createFromActiveFile",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "vscode-encrypted-zip.createFromDragDrop"
        }
      ]
    },
    "keybindings": [
      {
        "command": "vscode-encrypted-zip.createFromDragDrop",
        "key": "ctrl+alt+z",
        "mac": "cmd+alt+z",
        "when": "editorFocus || explorerViewletVisible"
      }
    ]
  },
  "scripts": {
    "lint": "eslint ./extension.js",
    "test": "node ./test/runTest.js",
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "archiver-zip-encrypted": "^1.0.11",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.34",
    "@types/vscode": "^1.60.0",
    "@vscode/test-electron": "^2.3.4",
    "adm-zip": "^0.5.16",
    "eslint": "^8.57.1",
    "glob": "^10.2.7",
    "mocha": "^10.2.0",
    "sinon": "^15.1.0",
    "typescript": "^5.1.3",
    "vsce": "^2.15.0"
  }
}
